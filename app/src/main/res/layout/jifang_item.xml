<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_jifang_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:layout_weight="0.16"
            android:gravity="center"
            android:text="集团十五层机房"
            android:textColor="@color/black"
            android:textSize="15sp"/>


        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/tv_jifang_name"
            android:layout_weight="0.1"
            android:gravity="bottom"
            android:text="机房状态"
            android:textSize="13sp"/>


        <TextView
            android:id="@+id/tv2"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/tv_jifang_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_1"
            android:background="@color/blue"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/tv2"
            android:layout_toRightOf="@id/tv_1"
            android:src="@drawable/redball"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_jifang_address"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="北京市朝阳区建国路98号"
        android:textColor="@color/black2"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/fengexian"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_jifang_sheshiNumber"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="设施数量:65"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_jifang_shidu"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/shidu"
            android:gravity="center_vertical"
            android:text=":  23%"
            android:textSize="15sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/fengexian"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_jifang_gaojingNumber"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="告警数量:0"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_jifang_wendu"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/wendu"
            android:gravity="center_vertical"
            android:text=":  23℃"
            android:textSize="15sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/fengexian"/>
</LinearLayout>