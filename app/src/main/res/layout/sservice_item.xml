<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/sservice_shape"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="OA系统"
            android:textColor="#000"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_res_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:padding="2dp"
            android:text="资源数量: 10"
            android:textColor="#000"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_warn_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="2dp"
            android:text="告警数量: 1"
            android:textColor="#000"
            android:textSize="13sp"/>

        <ImageView
            android:id="@+id/serviceitem_state"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/redball"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/serviceitem_state"
            android:padding="2dp"
            android:text="服务状态"
            android:textColor="#000"
            android:textSize="13sp"/>
    </RelativeLayout>
</LinearLayout>