<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.btv.activity.SettingActivity">

    <include
        layout="@layout/include_title"
        android:layout_width="match_parent"
        android:layout_height="100px">
    </include>

    <TextView
        android:id="@+id/setting_news"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:drawableRight="@drawable/rightback"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="新消息提醒"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"></View>

    <TextView
        android:id="@+id/setting_warning"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:drawableRight="@drawable/rightback"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="告警接收范围"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"></View>

    <TextView
        android:id="@+id/setting_jiankong"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:drawableRight="@drawable/rightback"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="监控资源过滤"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"></View>
</LinearLayout>
